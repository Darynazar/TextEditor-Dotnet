@model TextEditor.Models.Doc

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contect" class="control-label"></label>
                <textarea asp-for="Contect" class="form-control" id="editor"></textarea>
                <span asp-validation-for="Contect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-warning m-2" asp-action="Index">Back to List</a>
            </div>
        </form>

    </div>
</div>

<div>
    @* <a asp-action="Index">Back to List</a> *@
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
