@model TextEditor.Models.Doc
@using Microsoft.AspNetCore.Identity;
@inject UserManager<IdentityUser> userManager;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Doc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contect" class="control-label"></label>
                <textarea asp-for="Contect" style="width: 60vw; height: 80vh" class="form-control" id="editor"></textarea>
                <span asp-validation-for="Contect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="UserId" value="@userManager.GetUserId(User)" />
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">Back to List</a>
            </div>

            @* <div class="form-group">
                <a cla asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </div> *@
        </form>
    </div>
</div>

<div>
    @* <a class="btn btn-warning" asp-action="Index">Back to List</a> *@
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor');
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
